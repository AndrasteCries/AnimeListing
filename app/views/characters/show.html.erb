<div class="character anime">
  <div class="anime__container">
    <div class="anime__body">
      <div class="character__content">
        <div class="input-box character__image">
          <%= image_tag(@character.image) if @character.image.present? %>
        </div>
        <div class="character__block">
          <h1 class="title"><%= @character.name %></h1>
          <div class="input-box">
            <p><%= t("character.japanese") %>:</p>
            <p class="input"><%= @character.japanese %></p>
          </div>
          <div class="input-box">
            <p><%= t("character.full_name") %></p>
            <p class="input"><%= @character.full_name %></p>
          </div>
          <p>
            <strong><%= t("character.from") %>:</strong>
            <% @character.animes.each do |anime| %>
              <%= link_to anime.name, anime_path(anime) %>
            <% end %>
          </p>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to t("character.edit"), edit_character_path(@character), class: 'button' %>
          <% end %>
        </div>
      </div>

      <div class="character__description input-box">
        <p><%= t("character.description") %>:</p>
        <p class="input"><%= @character.description %></p>
      </div>

      <%= link_to t("character.back"), characters_path, class: 'button' %>
    </div>
  </div>
</div>
