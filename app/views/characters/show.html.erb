<div class="anime">
  <div class="anime__container">
    <div class="anime__body">
      <h1><%= @character.name %></h1>

      <p>
        <strong>Japanese:</strong>
        <%= @character.japanese %>
      </p>

      <p>
        <strong>Full Name:</strong>
        <%= @character.full_name %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @character.description %>
      </p>

      <p>
        <strong>Image:</strong>
        <%= image_tag(@character.image) if @character.image.present? %>
      </p>

      <p>
        <strong>From Anime:</strong>
        <strong><%= @character.animes.name %></strong>
        <% @character.animes.each do |anime| %>
          <%= link_to anime.name, anime_path(anime) %>
          <% unless anime == @character.animes.last %>,
          <% end %>
        <% end %>
      </p>

      <%= link_to 'Edit', edit_character_path(@character) %> |
      <%= link_to 'Back', characters_path %>
    </div>
  </div>
</div>